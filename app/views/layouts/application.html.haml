%html
%head
	%title Rails Project - Thiago Orniz
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
%body
	%p.notice= notice
	%p.alert= alert

	- if rep_signed_in?
		= link_to "Home", pages_path
		= link_to "Clients", clients_path
		= link_to "Products", products_path
		= link_to "Sign out", destroy_rep_session_path, method: :delete

	- else
		= link_to "Sign up", new_rep_registration_path
		= link_to "Sign in", new_rep_session_path

	=yield

